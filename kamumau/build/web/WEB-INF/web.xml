<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>PeopleController</servlet-name>
        <servlet-class>controller.PeopleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoriesController</servlet-name>
        <servlet-class>controller.CategoriesController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductsController</servlet-name>
        <servlet-class>controller.ProductsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrdersController</servlet-name>
        <servlet-class>controller.OrdersController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TransactionsController</servlet-name>
        <servlet-class>controller.TransactionsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FeedbacksController</servlet-name>
        <servlet-class>controller.FeedbacksController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PeopleController</servlet-name>
        <url-pattern>/people</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoriesController</servlet-name>
        <url-pattern>/categories</url-pattern>
    </servlet-mapping>
     <servlet-mapping>
        <servlet-name>ProductsController</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrdersController</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TransactionsController</servlet-name>
        <url-pattern>/transactions</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FeedbacksController</servlet-name>
        <url-pattern>/feedbacks</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
